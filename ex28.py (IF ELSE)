import random # Biblioteca para randomizar os números
import time   # Biblioteca para fazer o computador demorar em alguns momentos

print ('=' * 55)
print ('VOU PENSAR EM UM NUMERO ENTRE 0 E 5. TENTE ADIVINHAR...')
print ('=' * 55)

sorteio = random.randint(0, 5)    # Sorteia um número inteiro entre 0 e 5

num = int(input('Em que número eu pensei? '))    #Usuário tenta adivinhar
print ('PROCESSANDO...')
time.sleep(2)

if num == sorteio:
    print ('Parabéns!!! Você acertou')
else:
    print ('Falhou!!! Você errou')